function refreshList(unselected_companies) {
  const newSelectList = document.getElementById('product-list');
  newSelectList.innerHTML = innerHTML;
}

function addSelect(selectHTML) {
  var user_selection = document.querySelector('.select-list');
  user_selection.insertAdjacentHTML('beforeend', selectHTML);
}

addSelect('<%= j render "userselections/list", selection: @user_selection %>');
document.querySelector("[data-company-id='<%= @user_selection.company.id %>']")
  .remove();
