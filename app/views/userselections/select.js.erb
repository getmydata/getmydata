$(".select-category").click(function(){
  clearProductList();

  addSelect("<%= j render "userselections/select-companies", companies: @companies %>");

});

function addSelect(selectHTML) {
  var user_selection = document.getElementById('target-div')..firstElementChild;
  user_selection.insertAdjacentHTML('beforeend', selectHTML);
}

function clearProductList() {
  document.getElementById('product-list').innerHTML = "";
}
