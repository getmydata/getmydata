<div class="flexcontainer full-height space-around">
<div class="flexform div-margin-top div-margin-bottom">
    <h1>Edit Company</h1>
    <%= simple_form_for @company do |f| %>
        <%= cl_image_tag @company.avatar, height: 200, width: 200, crop: :fit %>
        <%= f.input :avatar %>
        <%= f.input :avatar_cache, as: :hidden %>
        <% if @company.avatar.file %>
          <%= link_to "Delete logo", @company.avatar.file.delete %>
        <% end %>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :category, collection: ["Living", "Energy", "News", "Bank", "Education"], prompt: "Choose a category" %> <!-- Don't forget to change the validation if you change this ;) -->
        <%= f.input :url %>
        <% if user_signed_in? && current_user.admin?  %>
          <%= f.input :approved, as: :boolean, boolean_style: :inline %>
        <% end %>
        <%= f.button :submit, "Update Company" %>
    <% end %>
  </div>
</div>
